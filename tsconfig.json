{
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "lib": ["es2019"],
    "outDir": "dist",
    "target": "es2019",
    "module": "esnext"
  },
  "include": ["src", "types"],
  "exclude": ["./**/*.spec.ts", "dist"]
}
