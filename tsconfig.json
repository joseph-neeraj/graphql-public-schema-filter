{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "lib": ["es2019"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["./**/*.spec.ts", "dist"]
}
