{
  "name": "@n1ru4l/graphql-public-schema-filter",
  "version": "0.0.0",
  "description": "Filter your GraphQL schema into a public schema.",
  "license": "MIT",
  "main": "dist/main/index.js",
  "module": "dist/module/index.js",
  "author": {
    "name": "Laurin Quast",
    "email": "laurinquast@googlemail.com",
    "url": "https://github.com/n1ru4l"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint",
      "git add -f"
    ],
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add -f"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "2.16.0",
    "@graphql-codegen/testing": "1.17.7",
    "@graphql-tools/schema": "7.1.5",
    "@types/jest": "26.0.24",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "bob-the-bundler": "1.4.1",
    "graphql": "15.5.1",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "lint-staged": "11.0.0",
    "prettier": "2.3.2",
    "ts-jest": "27.0.3",
    "typescript": "4.3.5"
  },
  "peerDependencies": {
    "graphql": "15.x.x"
  },
  "scripts": {
    "test": "jest",
    "build:module": "tsc --target es2017 --outDir dist/module",
    "build:main": "tsc --target es5 --outDir dist/main",
    "build": "yarn build:module && yarn build:main",
    "ci:eslint": "eslint --ext .ts,.js,.tsx --ignore-path .gitignore ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@graphql-tools/utils": "^7.10.0"
  }
}
